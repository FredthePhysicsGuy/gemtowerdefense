<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/gem_top_bar.css"/>
    </styles>
    <scripts>
      <include src="file://{resources}/scripts/custom_game/gem_top_bar.js"/>
    </scripts>
    <Panel hittest="false">
      <Panel id="top-bar-container" hittest="false">
      	<Panel class="round-root" hittest="false">
          <Panel class="round-panel" hittest="false">
            <Label id="round" text="Wave" hittest="false"/>
            <Label id="round-number" text="0" hittest="false"/>
          </Panel>
        </Panel>
        <Panel id="castle-health-container">
          <Label id="castle-health-title" text="Castle health"></Label>
          <Panel id="castle-health">
            <Label id="castle-health-value" text="100%"/>
            <Panel id="castle-health-inner">
              <Panel id="castle-health-progress"></Panel>
          </Panel>
          </Panel>
        </Panel>
      </Panel>
    </Panel>
</root>